<Window x:Class="kanbanboard.DeleteTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usuń Zadanie" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Lista zadań -->
        <ListBox x:Name="TaskListBox" DisplayMemberPath="title" />

        <!-- Przycisk do usunięcia -->
        <Button Content="Usuń wybrane zadanie" Grid.Row="1" Margin="10" HorizontalAlignment="Right" Click="DeleteSelectedTask_Click" />
    </Grid>
</Window>
