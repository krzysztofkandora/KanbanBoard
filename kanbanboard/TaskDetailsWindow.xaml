<Window x:Class="kanbanboard.TaskDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szczegóły Zadania" Height="500" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Tytuł -->
            <RowDefinition Height="Auto" />
            <!-- Użytkownik -->
            <RowDefinition Height="Auto" />
            <!-- Status -->
            <RowDefinition Height="*" />
            <!-- Opis -->
        </Grid.RowDefinitions>

        <!-- Tytuł zadania -->
        <TextBlock Text="Tytuł:" Grid.Row="0" FontWeight="Bold" />
        <TextBlock x:Name="TaskTitleTextBlock" Grid.Row="0" Margin="100,0,0,0" />

        <!-- Użytkownik -->
        <TextBlock Text="Przypisano do:" Grid.Row="1" FontWeight="Bold" />
        <TextBlock x:Name="AssignedUserTextBlock" Grid.Row="1" Margin="100,0,0,0" />

        <!-- Status -->
        <TextBlock Text="Status:" Grid.Row="2" FontWeight="Bold" />
        <TextBlock x:Name="StatusTextBlock" Grid.Row="2" Margin="100,0,0,0" />

        <!-- Opis zadania -->
        <TextBlock Text="Opis:" Grid.Row="3" FontWeight="Bold" />
        <TextBlock x:Name="TaskDescriptionTextBlock" Grid.Row="3" Margin="100,0,0,0" TextWrapping="Wrap" />
    </Grid>
</Window>
